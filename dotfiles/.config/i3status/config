# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
  colors = true
  color_good = "#86dc34"
  color_bad  = "#ff0000"
  color_degraded = "#ff7b00"
  interval = 1 
  separator = "|"
}

order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
#order += "load"
order += "memory"
order += "volume master"
order += "tztime local"
order += "bar"

path_exists VPN {
        # path exists when a VPN tunnel launched
	# by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
	format_down = "- No VPN connection -"
	separator_block_width = 30
	align = "left"
	min_width = 200
}
wireless _first_ {
        format_up = "Wireless: (Signal: %quality) %ip"
	format_down = "Wireless: DOWN"
	separator_block_width = 30
	min_width = 345
	align = "center"
}

ethernet _first_ {
        format_up = "Ethernet: (%speed) %ip"
        format_down = "Ethernet: DOWN"
	separator_block_width = 30
	align = "center"
	min_width = 300
}

battery all {
        format = "%status %percentage %remaining (%emptytime %consumption)"
	format_down = "- No battery -"
	status_chr = "ðŸ”‹"
	status_full = "Full"
	separator_block_width = 30
	min_width = 200
	align = "center"
}

disk "/" {
        format = "Space left: %avail"
	separator_block_width = 30
	min_width = 140
	align = "center"
}

memory {
        format = "RAM: %used/%total used"
        threshold_degraded = "2G"
        format_degraded = "RAM: %used/%total used"
	min_width = 200
	align = "center"
	separator_block_width = 30
}

volume master {
        format = "â™ª: %volume  "
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
	align = "center"
	min_width = 100
        mixer_idx = 0
}


tztime local {
        format = "%H:%M:%S  %Y-%m-%d "
	min_width = 270
	align = "right"
}

